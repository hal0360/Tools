<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="gradient_direction" format="enum">
        <enum name="none" value="0"/>
        <enum name="right" value="1"/>
        <enum name="left" value="2"/>
        <enum name="top" value="3"/>
        <enum name="bottom" value="4"/>
    </attr>
    <attr name="border_radius" format="dimension" />
    <attr name="stroke_width" format="dimension" />
    <attr name="first_color" format="color"  />
    <attr name="second_color" format="color"  />
    <attr name="stroke_color" format="color"  />

    <declare-styleable name="RonConstraintLayout">
        <attr name="gradient_direction" />
        <attr name="border_radius"/>
        <attr name="stroke_width"/>
        <attr name="first_color" />
        <attr name="second_color"/>
        <attr name="stroke_color" />
    </declare-styleable>

    <declare-styleable name="RonTextView">
        <attr name="gradient_direction" />
        <attr name="border_radius"/>
        <attr name="stroke_width"/>
        <attr name="first_color" />
        <attr name="second_color"/>
        <attr name="stroke_color" />
    </declare-styleable>

    <declare-styleable name="RonImageView">
        <attr name="gradient_direction" />
        <attr name="border_radius" />
        <attr name="stroke_width" />
        <attr name="first_color" />
        <attr name="second_color" />
        <attr name="stroke_color" />
    </declare-styleable>
</resources>